<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TikkeoTheme" parent="TikkeoTheme.Base">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Body3" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="TikkeoTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:radius">8dp</item>
    </style>
</resources>