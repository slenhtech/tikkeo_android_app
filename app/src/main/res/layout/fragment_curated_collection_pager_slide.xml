<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/white_box_image_height">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/slide_img"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/slide_shape">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:background="@drawable/slide_textview_style"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                style="@style/TextAppearance.Body3"
                android:id="@+id/slide_text"/>
        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>